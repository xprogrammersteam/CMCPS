@model CMCPS.Default.Opd.OpdReportData

@if ((bool?)ViewData["Printing"] == true)
{
    Layout = MVC.Views.Shared._LayoutNoNavigation;
}
@section Head
{
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
}
<section class="invoice">

    <div class="row">

        <div class="col-xs-12">

            <h3 style="text-align: center; text-decoration: underline">OUTDOOR PATIENT’S UP RECORD</h3>
        </div>

    </div>
    <br />

    <div class="row">
        <div class="col-xs-4 invoice-col">
            <h4><strong>Name:</strong>@Model.Opd.Name</h4>
        </div>
        @*<div class="col-xs-6 invoice-col">
                @{
                    string time = Model.Opd.Time.ToString();
                }
                <h4><strong>Date & Time of Admission:</strong> @Convert.ToDateTime(Model.Admission.Date).ToString("dd/MM/yyyy") & @Convert.ToDateTime(time).ToString("hh:mm tt")</h4>
            </div>*@
        <div class="col-xs-2 invoice-col">
            <h4><strong>Age:</strong>@Model.Opd.Age Y</h4>
        </div>
        <div class="col-xs-2 invoice-col">
            <h4><strong>Sex:</strong>@Model.Opd.Sex</h4>
        </div>
        <div class="col-xs-3">
            <h4><strong>PIN:</strong>@Model.Opd.PinNo</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-3 invoice-col">
            <h4><strong>Body Wt (kg):</strong>@Model.Opd.BodyWt</h4>
        </div>
        <div class="col-xs-3 invoice-col">
            <h4><strong>Unit Noumber:</strong>@Model.Opd.UniNo</h4>
        </div>
        <div class="col-xs-3">
            <h4><strong>Reg No.:</strong>@Model.Opd.RegNo</h4>
        </div>
        <div class="col-xs-3">
            <h4><strong>Patient Type:</strong>@Model.Opd.PatientType</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-8 invoice-col">
            <h4><strong>Address:</strong>@Model.Opd.House, @Model.Opd.PostOffice, @Model.Opd.UpazilaName, @Model.Opd.DistrictName</h4>
        </div>
        <div class="col-xs-4 invoice-col">
            <h4><strong>Mobile:</strong>@Model.Opd.Mobile</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-8 invoice-col">
            <h4><strong>Date of Admission:</strong> @Convert.ToDateTime(Model.Opd.Date).ToString("dd-MM-yyyy")</h4>
        </div>
    </div>
    <br />
    <div class="row">
        @{
            int counter = 0;
        }
        <div class="col-xs-12" style="min-height: 200px">
            <h4><strong>Diagnosis</strong></h4>
            @foreach (var d in Model.DaignosisDetails)
            {
                counter++;
                <h4 style="margin-left: 30px; min-height: 40px">@Model.GetSerial.Number(counter). @d.Diagnosis</h4>
            }

        </div>
        <!-- /.col -->
    </div>
    <div class="row">
        <div class="col-xs-12" style="min-height: 150px">
            <h4><strong>History: </strong><span style="line-height: 20px">@Model.Opd.History</span></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12" style="min-height: 150px">
            <h4><strong>Examination: </strong><span style="line-height: 20px">@Model.Opd.Examination</span></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12" style="min-height: 150px">
            <h4><strong>Investigation: </strong><span style="line-height: 20px">@Model.Opd.Investigation</span></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12" style="min-height: 150px">
            <h4><strong>Advice: </strong><span style="line-height: 20px">@Model.Opd.Advice</span></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12" style="min-height: 150px">
            <h4><strong>Remarks: </strong><span style="line-height: 20px">@Model.Opd.Remarks</span></h4>
        </div>
    </div>
    <div class="row">
        
        <div class="col-xs-12 ">
            <span class="pull-right">
                @Model.Opd.Doctor<br />
                ........................................
                <h4><strong>Doctor Name</strong></h4>
            </span>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <small class="pull-right">Date: @Convert.ToDateTime(DateTime.Now).ToString("dd/MM/yyyy")</small>
        </div>
    </div>
</section>
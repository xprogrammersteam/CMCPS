@model CMCPS.Default.Investigation.FollowUpReportData

@if ((bool?)ViewData["Printing"] == true)
{
    Layout = MVC.Views.Shared._LayoutNoNavigation;
}
@section Head
{
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
}
<section class="invoice">

    <div class="row">

        <div class="col-xs-12">

            <h3 style="text-align: center; text-decoration: underline">PATIENT’S FOLLOW UP RECORD</h3>
        </div>

    </div>
    <br />
    <div class="row">
        <div class="col-xs-4 invoice-col">
            <h4><strong>Name:</strong>@Model.Admission.Name</h4>
        </div>
        <div class="col-xs-6 invoice-col">
            @{
                string time = Model.Admission.Time.ToString();
            }
            <h4><strong>Date & Time of Admission:</strong> @Convert.ToDateTime(Model.Admission.Date).ToString("dd/MM/yyyy") & @Convert.ToDateTime(time).ToString("hh:mm tt")</h4>
        </div>
        <div class="col-xs-2 invoice-col">
            <h4><strong>Age:</strong>@Model.Admission.Age Y</h4>
        </div>

    </div>

    <div class="row">
        <div class="col-xs-3 invoice-col">
            <h4><strong>Sex:</strong>@Model.Admission.Sex</h4>
        </div>
        <div class="col-xs-3 invoice-col">
            <h4><strong>Weight:</strong>@Model.Admission.Weight kg</h4>
        </div>
        <div class="col-xs-3">
            <h4><strong>Blood Group:</strong>@Model.Admission.BloodGroup</h4>
        </div>
        <div class="col-xs-3 invoice-col">
            <h4><strong>Bed No:</strong>@Model.Admission.BedNumber</h4>
        </div>


    </div>
    <div class="row">
        <div class="col-xs-2">
            <h4><strong>PIN:</strong>@Model.Admission.PinNumber</h4>
        </div>
        <div class="col-xs-3 invoice-col">
            <h4><strong>Unit Noumber:</strong>@Model.Admission.UnitNumber</h4>
        </div>

        <div class="col-xs-3">
            <h4><strong>Unit Reg No.:</strong>@Model.Admission.UnitRegNumber</h4>
        </div>
        <div class="col-xs-4">
            <h4><strong>Hospital Reg No.:</strong>@Model.Admission.HospitalRegNumber</h4>
        </div>
    </div>

    <div class="row">

        <div class="col-xs-6">
            <h4><strong>Diagnosis: </strong>@Model.FollowUp.Diagnosis</h4>
        </div>
        <div class="col-xs-6" style="min-height: 150px">
            <h4><strong>Complaints: </strong>@Model.FollowUp.ChiefComplaint</h4>
        </div>

        <div class="col-xs-6">
            <h4><strong>Exam: </strong>@Model.FollowUp.Diagnosis</h4>

        </div>
        <div class="col-xs-6">
            <h4><strong>Advice: </strong>@Model.FollowUp.Advice</h4>

        </div>

        <div class="col-xs-6">
            <h4><strong>Note: </strong>@Model.FollowUp.Note</h4>

        </div>
        <div class="col-xs-6">
            <h4><strong>Plan: </strong>@Model.FollowUp.Plan</h4>

        </div>

    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="row">
        @*<div class="col-xs-6 pull-left">
                ............................
                <h4><strong>Supervisor</strong></h4>
            </div>*@
        <div class="col-xs-12 ">
            <span class="pull-right">
                @Model.FollowUp.Doctor<br />
                ..................................
                <h4><strong>Name of doctor</strong></h4>
            </span>
        </div>
    </div>
    <br />
    <br />

    <div class="row">
        <div class="col-xs-12">
            <small class="pull-right">Date: @Convert.ToDateTime(DateTime.Now).ToString("dd/MM/yyyy")</small>
        </div>
    </div>
</section>
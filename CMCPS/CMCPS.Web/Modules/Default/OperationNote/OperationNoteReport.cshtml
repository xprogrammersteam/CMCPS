@model CMCPS.Default.OperationNoteReportData

@if ((bool?)ViewData["Printing"] == true)
{
    Layout = MVC.Views.Shared._LayoutNoNavigation;
}
@section Head
{
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
}
<section class="invoice">

    <div class="row">

        <div class="col-xs-12">

            <h3 style="text-align: center; text-decoration: underline">PATIENT’S OPERATIVE NOTE</h3>
        </div>

    </div>
    <br />

    <div class="row">
        <div class="col-xs-4 invoice-col">
            <h4><strong>Name:</strong>@Model.Admission.Name</h4>
        </div>
        <div class="col-xs-2 invoice-col">
            <h4><strong>Age:</strong>@Model.Admission.Age Y</h4>
        </div>
        <div class="col-xs-3 invoice-col">
            <h4><strong>Sex:</strong>@Model.Admission.Sex</h4>
        </div>
        <div class="col-xs-3 invoice-col">
            <h4><strong>Weight:</strong>@Model.Admission.Weight kg</h4>
        </div>

    </div>
    <div class="row">
        <div class="col-xs-4">
            <h4><strong>Date of Birth:</strong>@Convert.ToDateTime(Model.Admission.DateOfBirth).ToString("dd/MM/yyyy")</h4>
        </div>
        <div class="col-xs-3">
            <h4><strong>Religion:</strong>@Model.Admission.Religion</h4>
        </div>

        <div class="col-xs-3">
            <h4><strong>Ward No:</strong>83 & 84</h4>
        </div>
        <div class="col-xs-2 invoice-col">
            <h4><strong>Bed No:</strong>@Model.Admission.BedNumber</h4>
        </div>
    </div>
    <div class="row">

        <div class="col-xs-3">
            <h4><strong>Blood Group:</strong>@Model.Admission.BloodGroup</h4>
        </div>
        <div class="col-xs-3">
            <h4><strong>PIN:</strong>@Model.Admission.PinNumber</h4>
        </div>
        <div class="col-xs-3 invoice-col">
            <h4><strong>Unit Noumber:</strong>@Model.Admission.UnitNumber</h4>
        </div>
        <div class="col-xs-3">
            <h4><strong>Type:</strong>@Model.Operation.Type</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3">
            <h4><strong>Unit Reg No.:</strong>@Model.Admission.UnitRegNumber</h4>
        </div>
        <div class="col-xs-4">
            <h4><strong>Hospital Reg No.:</strong>@Model.Admission.HospitalRegNumber</h4>
        </div>
        <div class="col-xs-5 invoice-col">
            <h4><strong>Date of Operation:</strong>@Convert.ToDateTime(Model.Operation.Date).ToString("dd/MM/yyyy")</h4>
        </div>

    </div>
    <div class="row">
        <div class="col-xs-3">
            @{
                string startTime = Model.Operation.StartTime.ToString();
            }
            <h4><strong>Start Time:</strong>@Convert.ToDateTime(startTime).ToString("hh:mm tt")</h4>
        </div>
        <div class="col-xs-3">
            @{
                string endTime = Model.Operation.EndTime.ToString();
            }
            <h4><strong>End Time:</strong>@Convert.ToDateTime(endTime).ToString("hh:mm tt")</h4>
        </div>
        <div class="col-xs-6 invoice-col">
            @{
                string time = Model.Admission.Time.ToString();
            }
            <h4><strong>Date & Time of Admission:</strong> @Convert.ToDateTime(Model.Admission.Date).ToString("dd/MM/yyyy") & @Convert.ToDateTime(time).ToString("hh:mm tt")</h4>
        </div>


    </div>
    @*<div class="row">
        <div class="col-xs-8 invoice-col">
            @{
                string time = Model.Admission.Time.ToString();
            }
            <h4><strong>Date & Time of Admission:</strong> @Convert.ToDateTime(Model.Admission.Date).ToString("dd/MM/yyyy") & @Convert.ToDateTime(time).ToString("hh:mm tt")</h4>
        </div>
      
    </div>*@

    <div class="row">
        <div class="col-xs-4">
            <h4><strong>Anesthesia: </strong>@Model.Operation.Anesthesia</h4>

        </div>
        <div class="col-xs-8">
            <h4><strong>Position: </strong>@Model.Operation.Position</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <h4><strong>Diagnosis: </strong>@Model.Operation.Diagnosis</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <h4><strong>Indication: </strong>@Model.Operation.Indication</h4>
        </div>
    </div>


    <div class="row">
        <div class="col-xs-12">
            <h4><strong>Incision: </strong>@Model.Operation.Incision</h4>
        </div>
    </div>
    @*<div class="row">
            <div class="col-xs-12">
                <h4><strong>Diagram: </strong>@Model.Operation.Diagram</h4>
            </div>
        </div>
        <br />*@
    <div class="row">
        <div class="col-xs-12">
            <h4><strong>Name of Operation: </strong>@Model.Operation.OperationName</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <h4><strong>Findings: </strong>@Model.Operation.Findings</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <h4><strong>Procedures: </strong>@Model.Operation.Procedures</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-6">
            <h4><strong>Tissue for Histopathology: </strong>@Model.Operation.Histopathology</h4>
        </div>
        <div class="col-xs-6">
            <h4><strong>Special Note: </strong>@Model.Operation.SpecialNote</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-6">
            <h4><strong>Instructions: </strong>@Model.Operation.Instructions</h4>
        </div>
        <div class="col-xs-6">
            <h4><strong>Further Plan: </strong>@Model.Operation.FurtherPlan</h4>
        </div>
    </div>
    @*<div class="row">
            <div class="col-xs-6">
                <h4><strong>OT Note Image: </strong>@Model.Operation.PhotoUrl</h4>
            </div>
        </div>*@

    <div class="row">
        <div class="col-xs-6">
            <h4><strong>Surgeon: </strong>@Model.Operation.Surgeon</h4>
        </div>
        <div class="col-xs-6">
            <h4><strong>Assistant Surgeon: </strong>@Model.Operation.AssistantSurgeon</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-6">
            <h4><strong>Anesthetist: </strong>@Model.Operation.Anesthetist</h4>
        </div>
        <div class="col-xs-6">
            <h4><strong>OT Sister: </strong>@Model.Operation.OtSister</h4>

        </div>
    </div>


    <div class="row">

        <div class="col-xs-6">
            <h4><strong>OT Attendant: </strong>@Model.Operation.OtAttendant</h4>
        </div>
    </div>

    <br />
    <br />
    <div class="row">
        <div class="col-xs-12 ">
            <span class="pull-right">
                @Model.Operation.Doctor<br />
                ................................
                <h4><strong>Doctor Name</strong></h4>
            </span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-xs-12">
            <small class="pull-right">Date: @Convert.ToDateTime(DateTime.Now).ToString("dd/MM/yyyy")</small>
        </div>
    </div>
</section>